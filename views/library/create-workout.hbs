<form method="POST" action="/library/create-workout">
  <label for="name">Workout name</label>
  <input type="text" id="name" name="name" value="{{workoutObj.name}}" placeholder="Workout name"/>

  <label for="description">Workout name</label>
  <input type="text" id="description" name="description" value="{{workoutObj.description}}" placeholder="Workout description" />

  <div class="dropdown-container">

        <label for="type">Type</label>
        <select name="type" id="type">
            {{> options workoutObj.type}}
        </select>

        <label for="duration">Duration</label>
        <input type="number" name="duration" id="duration" value="{{workoutObj.duration}}"  min="0" max="300"/>

        <label for="level">Level</label>
        <select name="level" id="level">
            {{> options workoutObj.level}}
        </select>

        <label for="goals">Goals</label>
        <select name="goals" id="goals">
              {{> options workoutObj.goals}}          
        </select>

        <label for="intensity">Intensity</label>
        <select name="intensity" id="intensity">
              {{> options workoutObj.intensity}}                     
        </select>
    </div>
    
    <section id="add-exercises">
        <article class="new-exercise">
            <span>Exercise Name</span>

            <input name="reps" type="number" id="reps" value="1" />
            <label for="unitType">Unit</label>
            <select name="unitType" id="unitType">
                <option value="Reps">Reps</option>
                <option value="Minutes">Minutes</option>
                <option value="Meter">Meter</option>
                <option value="Km">Km</option>
            </select>

            <span>Rest between reps</span>
            <input name="restBetweenReps" type="number" id="restBetweenReps" value="30" />
            <span>Seconds</span>


            <input name="sets" type="number" id="sets" value="1" />
            <span>Sets</span>

            <span>Rest between sets</span>
            <input name="restBetweenSets" type="number" id="restBetweenSets" value="30" />
            <span>Seconds</span>
        </article>


