<form method="POST" action="/library/create-workout">
  <label for="name">Workout name</label>
  <input type="text" id="name" name="name" value={{workoutObj.name}}/>

  <label for="description">Workout name</label>
  <input type="text" id="description" name="description" value={{workoutObj.description}} />

  <div class="dropdown-container">
        <label for="type">Type</label>
        <select name="type" id="type">
        <option value="Bodyweight">Bodyweight</option>
        <option value="Gym">Gym</option>
        <option value="Outdoor">Outdoor</option>
        <option value="Athlete">Athlete</option>
        <option value="Mobility">Mobility</option>
        <option value="Endurance">Endurance</option>
        </select>

        <label for="duration">Duration</label>
        <input type="number" name="duration" id="duration" />

        <label for="level">Level</label>
        <select name="level" id="level">
        <option value="Lannister / Targaryan">Lannister / Targaryan</option>
        <option value="Beginner">Beginner</option>
        <option value="Advanced">Advanced</option>
        <option value="Pro">Pro</option>
        <option value="Stark">Stark</option>
        </select>

        <label for="goals">Goals</label>
        <select name="goals" id="goals">
        <option value="Get summer fit">Get summer fit</option>
        <option value="Run a marathon">Run a marathon/option>
        <option value="Become more athletic">Become more athletic</option>
        <option value="Improve endurance">Improve endurance</option>
        <option value="Lose weight">Lose weight</option>
        <option value="Build muscle">Build muscle</option>
        </select>

        <label for="intensity">Intensity</label>
        <select name="intensity" id="intensity">
        <option value="Low">Low</option>
        <option value="Medium">Medium</option>
        <option value="High">High</option>
        </select>
    </div>
    <section id="add-exercises">
        <article class="new-exercise">
            <span>Exercise Name</span>

            <input name="reps" type="number" id="reps" value="1" />
            <label for="unitType">Unit</label>
            <select name="unitType" id="unitType">
                <option value="Reps">Reps</option>
                <option value="Minutes">Minutes</option>
                <option value="Meter">Meter</option>
                <option value="Km">Km</option>
            </select>

            <span>Rest between reps</span>
            <input name="restBetweenReps" type="number" id="restBetweenReps" value="30" />
            <span>Seconds</span>


            <input name="sets" type="number" id="sets" value="1" />
            <span>Sets</span>

            <span>Rest between sets</span>
            <input name="restBetweenSets" type="number" id="restBetweenSets" value="30" />
            <span>Seconds</span>
        </article>


