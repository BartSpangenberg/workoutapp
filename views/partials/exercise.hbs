<article class="new-exercise">
  <span>{{this.exerciseName}}</span>
  <input
    type="text"
    name="exerciseName"
    value="{{this.exerciseName}}"
    style="display:none"
  />

  <input name="reps" type="number" id="reps" value="{{this.reps}}" />

  <label for="unitType">Unit</label>
  <select name="unitType" id="unitType">
    {{> options this.unitTypes}}  
  </select>

  <input name="sets" type="number" id="sets" value="{{this.sets}}" />
  <span>Sets</span>

  <span>Rest between sets</span>
  <input
    name="restBetweenSets"
    type="number"
    id="restBetweenSets"
    value="{{this.restBetweenSets}}"
  />
  <span>Seconds</span>

  <span>Rest between exercises</span>
  <input
    name="restBetweenExercises"
    type="number"
    id="restBetweenExercises"
    value="{{this.restBetweenExercises}}"
  />
  <span>Seconds</span>

  <input
    type="text"
    name="exerciseId"
    value="{{this.exerciseId}}"
    style="display:none"
  />

</article>