<h1>About to find personalized workouts</h1>

{{! To improve : button }}

<form method="POST" action="/signup/body">
  <div class="mb-3">
    <label class="form-label" for="Height">Height in cm</label>
    <input
      class="form-control"
      type="number"
      name="height"
      value="{{currentUser.height}}"
    />
    <br />

    <label class="form-label" for="Weight">Weight in kg</label>
    <input
      class="form-control"
      type="number"
      name="weight"
      value="{{currentUser.weight}}"
    />

    <a class="btn btn-primary" href="/signup/athlete">Previous</a>
    <button class="btn btn-primary" type="submit">Next</button>
  </div>
</form>