<section id="intro-flow-section" class="swap-animation">
  <div class="intro-flow-box">
    <h3>Log in </h3>

    <div id='signin' class="mb-3">
      <form method="POST" action="/login">
        <div>
          <label class="form-label" id="marginText"></label>
          <input type="email" name="email" placeholder="Enter your email" class="form-control">
        </div>
        <div class="mb-3">
          <label class="form-label" id="marginText"></label>
          <input type="password" name="password" placeholder="Enter your Password" class="form-control">
        </div>

        <button  class="btn btn-outline-* btn-lg" type="submit"><i class="bi bi-check-circle"></i></button>

      </form>
    </div>

    <div>
      <hr id="solid">
      </hr>
    </div>


    {{#if errorLogin}}
    <div class="error">{{errorLogin}}</div>
    {{/if}}

  </div>
</section>

