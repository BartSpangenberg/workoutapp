<h1>Edit your password</h1>

<form method="POST" action="/profile/edit/password">

  <label class="form-label" for="password"></label>
  <input
    class="form-control"
    type="password"
    name="password"
    value="************"
  />
  <br />

  <button class="btn btn-primary" type="submit">Update</button>
</form>

{{#if msg}}
  <p class="msg"> {{msg}} </p>
{{/if}}