<section id="intro-flow-section">
  <div class="intro-flow-box">
    <h4>Edit your password</h4>
<br>
    <form method="POST" action="/profile/edit/password">

      <label class="form-label" for="password"></label>
      <input
        class="form-control"
        type="password"
        name="password"
        value="************"
      />
      <br />

       <button class="btn btn-outline-* btn-lg" type="submit"><i class="bi bi-check-circle"></i></button>
    </form>

    {{#if msg}}
      <p class="msg"> {{msg}} </p>
    {{/if}}

  </div>
</section>