
<section id="intro-flow-section">
  <div class="intro-flow-box">
    <h4>Edit your email</h4>

    <form method="POST" action="/profile/{{ currentUser._id }}/edit/email">
    <div class="mb-3">
        <label class="form-label" for="email"></label>
        <input
          placeholder={{currentUser.email}}
          class="form-control"
          type="text"
          name="email"
          value ={{currentUser.email}}
        />
        <br />

          <button class="btn btn-primary" type="submit">Update</button>
    </form>

  </div>
</section>